    if user
      button(class="btn", onclick="window.location='/chats'").
        MyChats
      button(class="btn", onclick="addNewConversation()").
        +
      span(style="padding-left:20px")
      button(class="btn", onclick="window.location='/profile/"+user.id+"'").
        MyProfile
     else
       button(class="btn", onclick="window.location='/'").
         Login
    block content
