doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    script(src = '/javascripts/jquery.min.js')
    if messages
      script(src="/javascripts/socket.io.js")
      script(src="/javascripts/socketclient.js")
      script(src="/javascripts/addnewmember.js")
      script(src="/javascripts/game/game.js")
      script(src="/javascripts/game/requestAnimationFrame.js")
      script(src="/javascripts/game/Keys.js")
      script(src="/javascripts/game/Player.js")
